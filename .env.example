# Database Configuration
# For local development (SQLite)
# DATABASE_URL=sqlite:///./onebby.db

# For production (PostgreSQL) - Get this from Render PostgreSQL
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# API Configuration
API_V1_STR=/api
PROJECT_NAME=Onebby API

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Security Configuration (IMPORTANT: Change in production!)
SECRET_KEY=GENERATE_ONE_STRONG_SECRET_KEY_HERE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# API Key for additional endpoint protection (optional but recommended)
API_KEY=GENERATE_STRONG_API_KEY_HERE

# Environment
ENVIRONMENT=production

# Payment Configuration
PAYMENT_MODE=test  # test or production
FRONTEND_URL=https://your-frontend-domain.com

# Payment Provider Credentials
# Payplug (Credit Card)
PAYPLUG_API_KEY=your_payplug_api_key_here
PAYPLUG_SECRET_KEY=your_payplug_secret_key_here

# Floa (Buy Now Pay Later - 3X/4X)
FLOA_API_KEY=your_floa_api_key_here
FLOA_SECRET_KEY=your_floa_secret_key_here

# Findomestic (Installments)
FINDOMESTIC_API_KEY=your_findomestic_api_key_here
FINDOMESTIC_SECRET_KEY=your_findomestic_secret_key_here

# Mock Payment Settings (Testing Only)
MOCK_WEBHOOK_SECRET=mock_webhook_secret_key
TESTING=False

# Garanzia3 Configuration (Warranty Registration)
# Get these from Garanzia3 account
GARANZIA3_API_URL=https://api.garanzia3.com  # Base API URL
GARANZIA3_TOKEN=your_garanzia3_token_here  # Authentication token
GARANZIA3_MODE=test  # test or production
GARANZIA3_TIMEOUT=30  # API timeout in seconds

# Cloudinary Configuration (Image Uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
